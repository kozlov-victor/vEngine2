{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es5",
            "es6",
            "es7"
        ],
        "importHelpers": true,
        "strict": false,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": true,
        "baseUrl": "./",
        "paths": {
            "@engine/*": ["engine/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "awesomeTypescriptLoaderOptions": {
      "transpileOnly": false,
      "useCache": true,
      "cacheDirectory": "./node_modules/.cache/awesome-typescript-loader",
      "useTranspileModule": true
    }
}
